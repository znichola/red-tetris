{
  "name": "red-tetris",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "coverage:serv": "serve -l tcp://0.0.0.0:5000 coverage",
    "build": "vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "npx prettier . --check",
    "format:write": "npx prettier . --write",
    "typecheck": "npx tsc --project ./jsconfig.json --noEmit",
    "precommit": "npm run lint && npm run format && npm run typecheck && npx vitest --run",
    "preview": "vite preview",
    "serv": "node server/server.js",
    "devserv": "nodemon --inspect=0.0.0.0 server/server.js"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.6.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "express": "^5.1.0",
    "lucide-react": "^0.488.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-redux": "^9.2.0",
    "seedrandom": "^3.0.5",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/express": "^5.0.1",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "@vitest/coverage-v8": "^3.1.2",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "jsdom": "^26.0.0",
    "nodemon": "^3.1.9",
    "prettier": "3.5.3",
    "serve": "^14.2.4",
    "typescript": "^5.8.3",
    "vite": "^6.2.0",
    "vitest": "^3.1.2"
  }
}
